
// This is used for web as well as node
{
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist"],
    "excludeFiles": ["yarn-lock.json"]
  },
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true
  }
}
