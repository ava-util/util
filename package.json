{
  "name": "@ava-util/util",
  "version": "1.0.2",
  "description": "Typescript Utilities",
  "scripts": {
    "prepack": "yarn test && yarn build && yarn bundle",
    "build": "yarn clean && yarn tsc:build",
    "clean": "rimraf dist/* && rimraf types/dist/* && rimraf types/build/*",
    "publish:all": "yarn publish && yarn publish types",
    "bundle": "yarn dts-bundle --configJson ./types/dts-bundle.json",

    "tsc:build": "tsc",
    "tsc:watch": "tsc -w",
    "test": "mocha",
    "test:brk": "mocha --inspect-brk"
  },
  "author": "Sean Stockson",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "types/dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ava-util/util.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "dts-bundle": "^0.7.3",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
